{% load static %}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" type="image/png" href="favicon.png"/>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <title>{% block title %}{% endblock %}</title>
    {% block style %}
        <link href="{% static 'app/css/bootstrap-reboot.min.css' %}" rel="stylesheet" type="text/css"/>
        <link href="{% static 'app/css/bootstrap.min.css' %}" rel="stylesheet" type="text/css"/>
        <link href="{% static 'app/css/bootstrap-grid.min.css' %}" rel="stylesheet" type="text/css"/>
    {% endblock %}
    <style>
        body {
            background: url({% static 'app/img/footer.png' %}) no-repeat;
            background-size: 100%;
            background-position-y: 130%;
            background-position-x: center;
            height: 100vh;
        }
    </style>
    {% block mycss %} {% endblock mycss %}

    {% block script %}
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
                integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
                crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
                integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
                crossorigin="anonymous"></script>
        <script src="{% static 'app/js/bootstrap.min.js' %}" type="text/javascript"></script>
    {% endblock %}

</head>

<body>{% block body %}{% endblock %}</body>
</html>
