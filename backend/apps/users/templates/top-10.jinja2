{% extends 'main.jinja2' %}
{% load static %}


{% block title %}Home page{% endblock %}
{% block mycss %}
    <style>
        body {
            background: url({% static 'app/img/footer.png' %}) no-repeat;
            background-size: 100%;
            background-position-y: 130%;
            background-position-x: center;
            height: 100vh;
        }

        .form-background {
            background: url({% static 'app/img/form_background.png' %});
            background-position: center;
            background-size: cover;
            background-position-y: 42%;
        }

        .form-login {
            background: #fffefeb0;
            border-radius: 74px;
        }
    </style>
{% endblock %}


{% block body %}
    <body>
    <div class="container-fluid m-0 p-0">
        <header>
            {% include 'includes/navbar.jinja2' %}
        </header>

        <h3 class="text-center text-success">Welcome on top 10 page</h3>
        <div class="col-12">
            <table class="table table-success table-striped">
                <thead>
                <tr>
                    <th colspan="3" class="text-center bg-transparent">My referrers</th>
                </tr>
                <tr>
                    <th scope="col">name</th>
                    <th scope="col">email</th>
                    <th scope="col">points</th>
                </tr>
                </thead>
                {% for user in  top_users %}
                    <tr>
                        <td>{{ user.first_name }}</td>
                        <td>
                            {{ user.email }}
                        </td>
                        <td>
                            {{ user.points }}
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
    </body>
{% endblock %}